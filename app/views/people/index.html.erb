
<h1 class="title">Gay Old Time</h1>
<p class="subtitle">LGBT+ Historical Figures</p>

<div class="subtitle">
  <h3>Sort by:</h3>
  <button>Name</button><button>Year</button>
</div>
<div class="all">
  <%#= render "people", people: @people %>
  <main>
    <div id="people">
      <ul>
        <% @alphabetical_people.each do |person| %>
          <li>
            <p>
              <%= link_to person.name, person %>
            </p>
            <p> <%= person.birthYear %></p>
          </li>
        <% end %>
      </ul>
    </div>
  </main>

</div>
<span class="make">
  <%= link_to "New person", new_person_path %>
</span>
