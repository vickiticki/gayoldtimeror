<div id="<%= dom_id person %>">
  <h1><%= person.name %></h1>

  <p>
    <strong>Country:</strong>
    <%= person.country %>
  </p>

  <p>
    <strong>Birth:</strong>
    <%= person.birthday %>/<%= person.birthYear%>
    <% if person.bce == true %> BCE <% end %>
  </p>

  <p>
    <strong>Death:</strong>
    <%= person.death %>
  </p>

  <p>
    <strong>Biography:</strong>
    <%= person.biography %>
  </p>

</div>
